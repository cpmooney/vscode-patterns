{
  "name": "smart-scaffold",
  "displayName": "Generate Code from Patterns",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "smart-scaffold.in-context-menu",
        "title": "Code from Patterns"
      }
    ],
    "chatParticipants": [
      {
        "name": "smart-scaffold",
        "id": "smart-scaffold-chat-participant-chat-particpant"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorFocus",
          "command": "smart-scaffold.in-context-menu",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "smart-scaffold.in-context-menu",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "check-types": "tsc --noEmit",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "clean": "rimraf out node_modules",
    "make-prod": "vsce package"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cpmooney/vscode-patterns.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/mocha": "^10.0.8",
    "@types/node": "20.x",
    "@types/vscode": "^1.94.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.11.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "@vscode/vsce": "^3.2.1"
  }
}
