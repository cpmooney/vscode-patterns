<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        logicalFilePath="db/changelog/db.changelog-20230113104330.xml"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd
      http://www.liquibase.org/xml/ns/pro
      http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd">

    
    <changeSet author="chris.mooney" id="Creating_agenda_items">
        <createTable tableName="agenda_items">
            <column name="id" type="uuid" defaultValue="gen_random_uuid()">
                <constraints primaryKey="true" nullable="false" />
            </column>

            <column name="meeting_id" type="uuid">
                <constraints nullable="false" />
            </column>

            <column name="title" type="varchar(255)"></column>
            <column name="notes" type="text"></column>

            <column name="created_at" defaultValueComputed="current_timestamp" type="timestamp with timezone" />
            <column name="updated_at" defaultValueComputed="current_timestamp" type="timestamp with timezone" />
        </createTable>
        <createTable tableName="agenda_items_aud">
            <column name="rev" type="bigint" />
            <column name="revtype" type="smallint" />

            <column name="id" type="uuid" />
            <column name="meeting_id" type="uuid" />
            <column name="meeting_id_mod" type="boolean" />
            <column name="title" type="varchar(255)" />
            <column name="title_mod" type="boolean" />
            <column name="notes" type="text" />
            <column name="notes_mod" type="boolean" />

            <column name="created_at" type="timestamp with timezone" />
            <column name="updated_at" type="timestamp with timezone" />
            <column name="updated_at_mod" type="boolean" />
        </createTable>
    </changeSet>


</databaseChangeLog>